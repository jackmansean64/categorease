{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Flask Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/server_flask.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "FLASK_DEBUG": "1",
                "DEBUG": "True",
                "PYTHONPATH": "${workspaceFolder}/app"
            }
        }
    ]
}